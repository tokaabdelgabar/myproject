<!-- <h2>Sign up</h2> -->
<h2 class="title-style-2">Registrieren<span class="title-under"></span></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
<div class="col-md-6">
  <div class="field">
    <%= f.label :first_name, "First name (required):"  %>
    <%= f.text_field :first_name, autofocus: true, class:"form-control"%>
    </div>
    <div class="field">
        <%= f.label :last_name, "Last Name (required):"  %>
        <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :username, "Usename(required):"  %>
        <%= f.text_field :username, autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :email, "Email (required):"  %>
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :birthday, "Birthday (required): DD/MM/YYYY"  %>
        <%= f.date_field :birthday, autofocus: true, class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :password, "Password (required):" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, "Passwort repeat (required):" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"%><br />
    </div>
    <div class="actions">
        <%= f.submit "Register", class: 'btn btn-primary pull-left' %><br />
    </div>
</div>

    <div class="form-group alerts">
                        
      <div class="alert alert-success" role="alert">
        
      </div>

      <div class="alert alert-danger" role="alert">
        
      </div>
      
    </div>     
</div>
